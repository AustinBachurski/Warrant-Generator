<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WarrantGenerator.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="80"
        x:Class="WarrantGenerator.AddCrimeDialog"
        x:DataType="vm:AddCrimeDialogViewModel"
        Icon="/Assets/logo.ico"
        Title="MCA Crime Dialog"
		Width="800" Height="80">

	<StackPanel Orientation="Horizontal"
				Margin="15"
				Spacing="10">
		<StackPanel>
			<TextBlock Text="MCA Code"/>
			<Border BorderBrush="{Binding McaCodeBorder}"
					BorderThickness="2">
				<TextBox Width="100"
						 Text="{Binding McaCodeText}"/>
			</Border>
		</StackPanel>
		<StackPanel>
			<TextBlock Text="Description"/>
			<Border BorderBrush="{Binding DescriptionBorder}"
					BorderThickness="2">
				<TextBox Width="585"
						 Text="{Binding DescriptionText}"/>
			</Border>
		</StackPanel>
		<StackPanel>
			<TextBlock />
			<Button Content="Add"
					Command="{Binding AddCrimeCommand}"/>
		</StackPanel>
	</StackPanel>
</Window>

